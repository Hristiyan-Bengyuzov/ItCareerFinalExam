@model ItCareerExam.Web.DTOs.Bars.EditBarDTO

@{
    ViewData["Title"] = "Edit";
    var imageSrc = Model.Photo ?? "https://cdn-icons-png.flaticon.com/512/1901/1901369.png";
}


<div class="card light-shadow m-0 m-auto col-5">
    <div class="img-fluid text-center mt-2">
        <img class="card-img-top img-fluid" style="width: 20rem" style="object-fit: contain" src="@imageSrc" alt="Person image">
    </div>
    <div class="card-body">
        <h5 class="card-title">Edit the bar</h5>
        <div>
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input asp-for="Id" type="hidden" value="@Model.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control name-input" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea rows="5" asp-for="Description" class="form-control description-input"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhotoInput" class="control-label"></label>
                    <input asp-for="PhotoInput" class="form-control file-input" accept="image/*" />
                    <span asp-validation-for="PhotoInput" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}